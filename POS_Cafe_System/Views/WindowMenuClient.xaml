<Window x:Class="POS_Cafe_System.Views.WindowMenuOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_Cafe_System.Views"
        mc:Ignorable="d"
        Title="Меню заказов" Height="800" Width="1100"
        MinWidth="800" MinHeight="450">
    <Window.Resources>
        <!-- Стиль кнопки -->
        <Style x:Key="btnStyleTransparent" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Кнопка с определным шаблоном -->
        <Style x:Key="btnStyleCategory" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Button Style="{StaticResource btnStyleTransparent}">
                            <TextBlock Text="{TemplateBinding Content}" Style="{DynamicResource tblStyle}"/>
                        </Button>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBlock -->
        <Style x:Key="tblStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Britannic Bold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- "Плитка" продукта -->
        <Style x:Key="Item" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="35"/>
                            </Grid.RowDefinitions>

                            <Image Source="{Binding ImageBytes}"/>
                            <DockPanel Grid.Row="1">
                                <TextBlock Style="{DynamicResource tblStyle}"
                                           Text="{Binding Name}"
                                           Foreground="Black"
                                           VerticalAlignment="Top"
                                           DockPanel.Dock="Left"/>
                                
                                <TextBlock Style="{DynamicResource tblStyle}" 
                                           Text="{Binding Price}"
                                           Foreground="Black"
                                           VerticalAlignment="Top"
                                           TextAlignment="Right"
                                           DockPanel.Dock="Right"/>
                            </DockPanel>


                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="235"/>
        </Style>
        
        <!-- Общий стиль для кнопок -->
        <Style x:Key="btnStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid Width="{TemplateBinding Width}"
                              Height="{TemplateBinding Height}">
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Transparent" StrokeThickness="20" Fill="{TemplateBinding Background}" RadiusX="20" RadiusY="20" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <!-- Категории -->
        <StackPanel Grid.RowSpan="2">
                    <Button Style="{StaticResource btnStyleCategory}" Content="Категории" Height="60" IsEnabled="False"/>
                    <Button Style="{StaticResource btnStyleCategory}" Content="Бургеры"/>
                    <Button Style="{StaticResource btnStyleCategory}" Content="Картошка-фри"/>
                    <Button Style="{StaticResource btnStyleCategory}" Content="Соусы"/>
                    <Button Style="{StaticResource btnStyleCategory}" Content="Напитки"/>
        </StackPanel>

        <!-- Плитки товаров -->
        <ListBox Grid.Column="1" ItemsSource="{Binding Items}" BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 SelectedIndex="{Binding SelectedItem}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemHeight="250" ItemWidth="250" IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{DynamicResource Item}" Margin="10" Command="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=DataContext.AddInOrder}">
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Корзина -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource btnStyleCategory}" Content="Корзина" IsEnabled="False"/>
            <ListBox Grid.Row="1" BorderThickness="0" ItemsSource="{Binding OrderItems}" SelectedIndex="{Binding SelectedOrderItems}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="DockPanel">
                        <DockPanel LastChildFill="True">
                            <StackPanel Width="150">
                                <TextBlock Text="{Binding Name}"
                                           Style="{StaticResource tblStyle}"/>
                                <TextBlock Text="{Binding Count}"
                                           Style="{StaticResource tblStyle}"/>
                            </StackPanel>
                            <DockPanel HorizontalAlignment="Right" Width="130">
                                <Button x:Name="btnPlus"
                                        Background="Green" Content="+" 
                                        Width="{Binding ElementName=btnPlus, Path=ActualHeight}"
                                        FontStretch="Condensed" Foreground="White"
                                        Margin="10" DockPanel.Dock="Right"/>

                                <Button Background="Red" Content="-" 
                                        HorizontalAlignment="Right"
                                        Width="{Binding ElementName=btnPlus, Path=ActualHeight}"
                                        FontStretch="Condensed" Foreground="White"
                                        Margin="10" DockPanel.Dock="Right"/>
                            </DockPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <DockPanel Grid.Row="2">
                <TextBlock Style="{DynamicResource tblStyle}"
                                           Text="Итого"
                                           Foreground="Black"
                                           DockPanel.Dock="Left"/>
                <TextBlock Style="{DynamicResource tblStyle}" 
                                           Text="{Binding PriceOrder}"
                                           Foreground="Black"
                                           TextAlignment="Right"
                                           DockPanel.Dock="Right"
                                           Margin="10"/>
            </DockPanel>
        </Grid>
        
        <!-- Оформление заказа -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                    Grid.Row="1" Grid.Column="2">
            <Button Style="{StaticResource btnStyle}" Content="Заказать"/>
        </StackPanel>
    </Grid>
</Window>
