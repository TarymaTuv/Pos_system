<Window x:Class="POS_Cafe_System.Views.WindowMenuOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_Cafe_System.Views"
        mc:Ignorable="d"
        Title="Меню заказов" Height="800" Width="1000">
    <Window.Resources>
        <!-- Стиль кнопки -->
        <Style x:Key="btnStyleTransparent" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Кнопка с определным шаблоном -->
        <Style x:Key="btnStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Button Style="{StaticResource btnStyleTransparent}">
                            <TextBlock Text="{TemplateBinding Content}" Style="{DynamicResource tblStyle}"/>
                        </Button>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBlock -->
        <Style x:Key="tblStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Britannic Bold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- "Плитка" продукта -->
        <Style x:Key="Item" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="35"/>
                            </Grid.RowDefinitions>

                            <Image Source="{Binding Image}"/>
                            <DockPanel Grid.Row="1">
                                <TextBlock Style="{DynamicResource tblStyle}"
                                           Text="{Binding Name}"
                                           Foreground="Black"
                                           VerticalAlignment="Top"
                                           DockPanel.Dock="Left"/>
                                <TextBlock Style="{DynamicResource tblStyle}" 
                                           Text="{Binding Price}"
                                           Foreground="Black"
                                           VerticalAlignment="Top"
                                           TextAlignment="Right"
                                           DockPanel.Dock="Right"/>
                            </DockPanel>


                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="235"/>
            <Setter Property="Height" Value="235"/>

        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="2">
            <Button Style="{StaticResource btnStyle}" Content="Категории" Height="60" IsEnabled="False"/>
            <Button Style="{StaticResource btnStyle}" Content="Бургеры"/>
            <Button Style="{StaticResource btnStyle}" Content="Картошка-фри"/>
            <Button Style="{StaticResource btnStyle}" Content="Соусы"/>
            <Button Style="{StaticResource btnStyle}" Content="Напитки"/>
        </StackPanel>

        <ListBox Grid.Column="1" ItemsSource="{Binding Items}" BorderThickness="0">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{DynamicResource Item}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>




    </Grid>
</Window>
